@using LocalOfferts.Data
@using LocalOfferts.Service
@using Microsoft.AspNetCore.Components.Authorization;

@page "/adminproductlist"
@inject IProductService ProductService
@inject AuthenticationStateProvider AuthenticationStateProvider


<AuthorizeView Roles="Administrators"> 
    <Authorized>

        <h1>Witaj, @context.User.Identity.Name!</h1>
        <h2>Usuń produkty z bazy danych </h2>
        @if (products == null)
        {
            <p>Ładowanie danych...</p>
        }
        else
        {
            <table class='table'>
                <thead>
                    <tr>
                        <th>Lp</th>
                        <th>Nazwa Produktu</th>
                        <th>Nazwa Użytkownika</th>
                        <th>Nazwa Sklepu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.UserName</td>
                            <td>@product.ShopeName</td>
                            <td>
                                <a href='/AdminDeleteProduct/@product.ProductId'>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </Authorized>
    <NotAuthorized>
        <h1>Authentication Failure!</h1>
        <p>You're not signed in.</p>
    </NotAuthorized>
</AuthorizeView>


@code {
    IEnumerable<Product> products;

    protected override async Task OnInitializedAsync()
    {

        products = await ProductService.GetProducts();

    }

}
